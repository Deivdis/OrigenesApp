<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <Button
        android:id="@+id/btnSuplementos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suplementos" />

    <Button
        android:id="@+id/btnVitaminas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vitaminas" />

    <Button
        android:id="@+id/btnHerbales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Herbales" />

    <Button
        android:id="@+id/btnMinerales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minerales" />

    <TextView
        android:id="@+id/nombreTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descripcionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/precioTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imagenImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp" /> <!-- Ajusta el margen segÃºn sea necesario -->

</LinearLayout>
