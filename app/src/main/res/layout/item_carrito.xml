<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imagenProductoImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_launcher_foreground" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/nombreProductoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Nombre del Producto"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/precioProductoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/decreaseQuantityButton"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:src="@drawable/less" />

            <TextView
                android:id="@+id/cantidadProductoTextView"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:background="@drawable/grey_background"
                android:inputType="number"
                android:padding="8dp"
                android:text="1"
                android:textAlignment="center"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/increaseQuantityButton"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:src="@drawable/more" />

        </LinearLayout>

        <ImageView
            android:id="@+id/eliminarProductoButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:src="@drawable/delete" />
    </LinearLayout>

</LinearLayout>
